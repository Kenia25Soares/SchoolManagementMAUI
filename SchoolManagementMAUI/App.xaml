<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SchoolManagementMAUI"
             xmlns:conv="clr-namespace:SchoolManagementMAUI.Converters"
             x:Class="SchoolManagementMAUI.App">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/EducationalStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Converters -->
            <conv:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <conv:IsNotNullConverter x:Key="IsNotNullConverter" />
            <conv:InverseBoolConverter x:Key="InverseBoolConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
