<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchoolManagementMAUI.ViewModels"
             xmlns:models="clr-namespace:SchoolManagementMAUI.Models"
             x:Class="SchoolManagementMAUI.Views.SubjectListPage"
             x:DataType="vm:SubjectListViewModel"
             Title="My Subjects">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Header -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="{Binding StudentName}" 
                       Style="{StaticResource EducationalWelcomeHeader}" />
                <Label Text="Select a subject to view detailed grades and absences" 
                       Style="{StaticResource EducationalWelcomeSubtitle}"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <!-- Loading Indicator -->
            <ActivityIndicator IsVisible="{Binding IsLoading}"
                             IsRunning="{Binding IsLoading}"
                             Style="{StaticResource EducationalLoadingIndicator}" />

            <!-- Message -->
            <Label Text="{Binding Message}"
                   Style="{StaticResource EducationalErrorMessage}"
                   IsVisible="{Binding Message, Converter={StaticResource StringNotEmptyConverter}}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <!-- Subjects List -->
            <CollectionView ItemsSource="{Binding Subjects}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:SubjectInfo">
                        <Frame Style="{StaticResource EducationalSubjectCardFrame}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SubjectListViewModel}}, Path=SelectSubjectCommand}" 
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout>
                                <Label Text="{Binding SubjectName}" 
                                       Style="{StaticResource EducationalSubjectNameCard}" />
                                <Label Text="{Binding SubjectCode}" 
                                       Style="{StaticResource EducationalSubjectCode}" />
                                <Label Text="{Binding TeacherName, StringFormat='Teacher: {0}'}" 
                                       Style="{StaticResource EducationalSubjectTeacher}" />
                                <Label Text="Tap to view details" 
                                       Style="{StaticResource EducationalSubjectTapHint}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>