<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SchoolManagementMAUI.Views.AlertsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:SchoolManagementMAUI.Models"
             xmlns:conv="clr-namespace:SchoolManagementMAUI.Converters"
             Title="Notifications"
             BackgroundColor="{AppThemeBinding Light=#F8FAFC, Dark=#0F172A}">

   
    <Grid RowDefinitions="*,Auto" Padding="20">
        <!-- Lista com pull-to-refresh -->
        <RefreshView Grid.Row="0"
                     Command="{Binding RefreshCommand}"
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Alerts}"
                            SelectionMode="None"
                            VerticalOptions="FillAndExpand">
                <!-- CabeÃ§alho: card azul -->
                <CollectionView.Header>
                    <Frame Style="{StaticResource EducationalCardFrame}"
                           BackgroundColor="{StaticResource EducationalBlue}">
                        <VerticalStackLayout Spacing="16">
                            <Label Text="ðŸ”” Notifications"
                                   Style="{StaticResource EducationalSectionTitle}"
                                   TextColor="White" />
                            <Label Text="Stay updated with your latest academic information"
                                   Style="{StaticResource EducationalTeacherName}"
                                   TextColor="White" />
                            <Button Text="Mark All Read"
                                    Command="{Binding MarkAllAsReadCommand}"
                                    IsVisible="{Binding HasUnreadAlerts}"
                                    Style="{StaticResource EducationalPrimaryButton}" />
                        </VerticalStackLayout>
                    </Frame>
                </CollectionView.Header>

                <CollectionView.EmptyView>
                    <Frame Style="{StaticResource EducationalCardFrame}"
                           BackgroundColor="#F0F9FF"
                           BorderColor="#BAE6FD">
                        <VerticalStackLayout Spacing="16" HorizontalOptions="Center">
                            <Label Text="ðŸ“¢" FontSize="48" HorizontalOptions="Center" />
                            <Label Text="No notifications yet" Style="{StaticResource EducationalSectionTitle}" HorizontalOptions="Center" />
                            <Label Text="You'll see important updates here when they arrive"
                                   Style="{StaticResource EducationalTeacherName}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Frame>
                </CollectionView.EmptyView>

                <!-- Template dos alerts -->
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:AlertInfo">
                        <Frame Style="{StaticResource EducationalCardFrame}"
                               BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}"
                               Margin="0,0,0,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- ConteÃºdo -->
                                <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Spacing="4">
                                    <Label Text="{Binding Title}" Style="{StaticResource EducationalSubjectName}" />
                                    <Label Text="{Binding Message}" Style="{StaticResource EducationalTeacherName}" LineBreakMode="WordWrap" />
                                </StackLayout>

                                <!-- Disciplina -->
                                <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="8" Margin="0,4,0,4">
                                    <Frame IsVisible="{Binding SubjectName, Converter={StaticResource IsNotNullConverter}}"
                                           BackgroundColor="{StaticResource EducationalBlue}"
                                           CornerRadius="4" Padding="6,2" HasShadow="False">
                                        <Label Text="{Binding SubjectName}" FontSize="12" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
                                    </Frame>
                                </StackLayout>

                                <!-- Data/Hora -->
                                <Label Grid.Row="1" Grid.Column="2" Text="{Binding CreatedAt, StringFormat='{0:MMM dd, HH:mm}'}" FontSize="10" TextColor="{StaticResource EducationalGray}" VerticalOptions="End" HorizontalOptions="End" />

                                <!-- Marcar como lido -->
                                <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                                        Text="Mark as Read"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.MarkAlertAsReadCommand}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource EducationalSecondaryButton}"
                                        BackgroundColor="{StaticResource EducationalGreen}"
                                        TextColor="White" FontSize="14"
                                        Padding="16,12"
                                        HorizontalOptions="FillAndExpand"
                                        Margin="0,8,0,0"
                                        IsVisible="{Binding IsRead, Converter={StaticResource InverseBoolConverter}}" />

                                <!-- Indicador nÃ£o lido -->
                                <Ellipse Grid.Row="0" Grid.Column="2"
                                         IsVisible="{Binding IsRead, Converter={StaticResource InverseBoolConverter}}"
                                         Fill="{Binding Type, Converter={StaticResource AlertTypeColorConverter}}"
                                         WidthRequest="8" HeightRequest="8" VerticalOptions="Start" Margin="8,8,0,0" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Mensagem de erro -->
        <Label Grid.Row="1"
               Text="{Binding ErrorMessage}"
               IsVisible="{Binding HasError}"
               TextColor="Red"
               HorizontalOptions="Center"
               Margin="0,12,0,0" />
    </Grid>
</ContentPage>