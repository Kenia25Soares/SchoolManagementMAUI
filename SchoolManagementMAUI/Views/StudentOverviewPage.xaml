<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchoolManagementMAUI.ViewModels"
             x:Class="SchoolManagementMAUI.Views.StudentOverviewPage"
             x:DataType="vm:StudentOverviewViewModel"
             Title="Academic Overview">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Student Header -->
            <Frame Style="{StaticResource EducationalProfileHeaderFrame}">
                <VerticalStackLayout Spacing="15">
                    <!-- Profile Picture and Name -->
                    <HorizontalStackLayout Spacing="15">
                        <Frame WidthRequest="80" HeightRequest="80" 
                               Style="{StaticResource EducationalProfilePictureFrame}">
                            <Image Source="{Binding ProfilePictureUrl}" 
                                   Aspect="AspectFill" 
                                   WidthRequest="80" 
                                   HeightRequest="80" />
                        </Frame>
                        <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                            <Label Text="{Binding StudentName}" 
                                   Style="{StaticResource EducationalProfileName}" />
                            <Label Text="{Binding StudentEmail}" 
                                   Style="{StaticResource EducationalProfileEmail}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Class Information --><!--
            <Frame Style="{StaticResource EducationalCardFrame}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Class Information" 
                           Style="{StaticResource EducationalSectionHeader}" />

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                        <Label Grid.Row="0" Grid.Column="0" Text="Class:" Style="{StaticResource EducationalInfoGridLabel}" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding StudentClass}" Style="{StaticResource EducationalInfoGridValue}" />

                        <Label Grid.Row="1" Grid.Column="0" Text="Course:" Style="{StaticResource EducationalInfoGridLabel}" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding CourseName}" Style="{StaticResource EducationalInfoGridValue}" />

                        <Label Grid.Row="2" Grid.Column="0" Text="Academic Year:" Style="{StaticResource EducationalInfoGridLabel}" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding AcademicYear}" Style="{StaticResource EducationalInfoGridValue}" />
                    </Grid>

                    --><!-- Class Status --><!--
                    <Frame Style="{StaticResource EducationalStatusActiveFrame}">
                        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="Class Status:" Style="{StaticResource EducationalStatusActiveLabel}" />
                            <Label Text="ACTIVE" Style="{StaticResource EducationalStatusActiveLabel}" />
                        </HorizontalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </Frame>-->

            <!-- Error Message -->
            <Label Text="{Binding Message}" 
                   Style="{StaticResource EducationalErrorMessage}"
                   IsVisible="{Binding Message, Converter={StaticResource StringNotEmptyConverter}}" />

            <!-- Loading indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="12">
                <Button Text="View Class Subjects" 
                        Command="{Binding ViewClassDetailsCommand}"
                        Style="{StaticResource EducationalPrimaryButton}" />
            </VerticalStackLayout>

        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>