<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchoolManagementMAUI.ViewModels"
             x:Class="SchoolManagementMAUI.Views.StudentOverviewPage"
             x:DataType="vm:StudentOverviewViewModel"
             Title="Academic Overview">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Student Header -->
            <Frame BackgroundColor="#F8F9FA" CornerRadius="15" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <!-- Profile Picture and Name -->
                    <HorizontalStackLayout Spacing="15">
                        <Frame WidthRequest="80" HeightRequest="80" CornerRadius="40" 
                               BackgroundColor="LightGray" Padding="0" HasShadow="True">
                            <Image Source="{Binding ProfilePictureUrl}" 
                                   Aspect="AspectFill" 
                                   WidthRequest="80" 
                                   HeightRequest="80" />
                        </Frame>
                        <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                            <Label Text="{Binding StudentName}" 
                                   FontSize="22" 
                                   FontAttributes="Bold" 
                                   TextColor="#1E3A8A" />
                            <Label Text="{Binding StudentEmail}" 
                                   FontSize="14" 
                                   TextColor="Gray" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Class Information -->
            <Frame BackgroundColor="White" CornerRadius="12" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Class Information" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#1E3A8A" />

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                        <Label Grid.Row="0" Grid.Column="0" Text="Class:" FontAttributes="Bold" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding StudentClass}" Margin="10,0,0,0" />

                        <Label Grid.Row="1" Grid.Column="0" Text="Course:" FontAttributes="Bold" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding CourseName}" Margin="10,0,0,0" />

                        <Label Grid.Row="2" Grid.Column="0" Text="Academic Year:" FontAttributes="Bold" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding AcademicYear}" Margin="10,0,0,0" />
                    </Grid>

                    <!-- Class Status -->
                    <Frame CornerRadius="8" Padding="12,6" Margin="0,10,0,0" HasShadow="False"
                           BackgroundColor="#10B981">
                        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">

                            <Label Text="Class Status:" FontSize="12" FontAttributes="Bold" TextColor="White" />
                            <Label Text="ACTIVE" FontSize="12" FontAttributes="Bold" TextColor="White" />
                        </HorizontalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- Error Message -->
            <Label Text="{Binding Message}" 
                   TextColor="Red" 
                   IsVisible="{Binding Message, Converter={StaticResource StringNotEmptyConverter}}" />

            <!-- Loading indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="12">
                <Button Text="View Class Subjects" 
                        Command="{Binding ViewClassDetailsCommand}"
                        BackgroundColor="#1E3A8A" 
                        TextColor="White" 
                        CornerRadius="8" 
                        HeightRequest="50" 
                        FontAttributes="Bold" />


            </VerticalStackLayout>

        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>