<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolManagementMAUI.Views.UpdatePasswordPage"
             Title="Update Password"
              BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Update Password" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" />
                <Label Text="Enter your current password and new password" 
                       FontSize="14" 
                       TextColor="Gray" 
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <!-- Current Password -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Current Password" FontSize="16" FontAttributes="Bold" />
                <Entry Placeholder="Enter your current password" 
                       Text="{Binding CurrentPassword}" 
                       IsPassword="True" />
            </VerticalStackLayout>


            <!-- New Password -->
            <VerticalStackLayout Spacing="5">
                <Label Text="New Password" FontSize="16" FontAttributes="Bold" />
                <Entry Placeholder="Enter the new password" 
                       Text="{Binding NewPassword}" 
                       IsPassword="True" />
            </VerticalStackLayout>

            <!-- Confirm New Password -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Confirm New Password" FontSize="16" FontAttributes="Bold" />
                <Entry Placeholder="Confirm the new password" 
                       Text="{Binding ConfirmPassword}" 
                       IsPassword="True" />
            </VerticalStackLayout>

            <!-- Update Button -->
            <Button Text="Update Password" 
                    Command="{Binding UpdatePasswordCommand}"
                    IsEnabled="{Binding CanUpdatePassword}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50" />

            <!-- Loading Indicator -->
            <ActivityIndicator IsVisible="{Binding IsUpdatingPassword}"
                             IsRunning="{Binding IsUpdatingPassword}"
                             Color="#007AFF"
                             HorizontalOptions="Center" />

            <!-- Message -->
            <Border IsVisible="{Binding HasMessage}"
                    BackgroundColor="#F0F0F0"
                    Stroke="{Binding MessageColor}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 8"
                    Padding="15"
                    Margin="0,10,0,0">
                <Label Text="{Binding Message}" 
                       TextColor="{Binding MessageColor}"
                       FontSize="16"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />
            </Border>

            <!-- Back Button -->
            <Button Text="Back" 
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="Transparent"
                    TextColor="#007AFF"
                    BorderColor="#007AFF"
                    CornerRadius="8"
                    HeightRequest="50" />

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>