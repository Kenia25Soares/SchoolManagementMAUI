<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolManagementMAUI.Views.SubjectDetailPage"
             Title="Subject Detail">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Subject Header -->
            <VerticalStackLayout Spacing="5">
                <Label Text="{Binding SubjectName}" Style="{StaticResource EducationalHeaderLabel}" />
                <Label Text="{Binding SubjectDetail.TeacherName}" Style="{StaticResource EducationalTeacherName}" HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Loading indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <!-- Error message -->
            <Label Text="{Binding Message}" Style="{StaticResource EducationalErrorMessage}" IsVisible="{Binding Message, Converter={StaticResource StringNotEmptyConverter}}" />

            <!-- Summary Card -->
            <Frame Style="{StaticResource EducationalSummaryFrame}" IsVisible="{Binding SubjectDetail, Converter={StaticResource IsNotNullConverter}}">
                <VerticalStackLayout>
                    <Label Text="Summary" Style="{StaticResource EducationalSummaryLabel}" />
                    <Label Text="{Binding SubjectDetail.WeightedAverage, StringFormat='Average: {0:F2}', FallbackValue='Average: N/A'}" Style="{StaticResource EducationalSummaryRegular}" />
                    <Label Style="{StaticResource EducationalSummaryRegular}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Absences: " />
                                <Span Text="{Binding SubjectDetail.TotalAbsences}" />
                                <Span Text="/" />
                                <Span Text="{Binding SubjectDetail.AllowedAbsences}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label Text="{Binding SubjectDetail.StatusDescription}" Style="{StaticResource StatusTextColor}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Grades Section -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Grades" Style="{StaticResource EducationalGradesTitle}" />
                <CollectionView ItemsSource="{Binding Grades}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Style="{StaticResource EducationalSmallCardFrame}">
                                <VerticalStackLayout>
                                    <Label Text="{Binding EvaluationType}" Style="{StaticResource EducationalGradeType}" />
                                    <Label Text="{Binding Value, StringFormat='Grade: {0:F2}'}" Style="{StaticResource EducationalGradeInfo}" />
                                    <Label Text="{Binding Weight, StringFormat='Weight: {0:F2}'}" Style="{StaticResource EducationalGradeDetail}" />
                                    <Label Text="{Binding Date, StringFormat='Date: {0:dd/MM/yyyy}'}" Style="{StaticResource EducationalGradeDetail}" />
                                    <Label Text="{Binding Observations}" Style="{StaticResource EducationalGradeObservations}" IsVisible="{Binding Observations, Converter={StaticResource StringNotEmptyConverter}}" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <!-- Absences Section -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Absences" Style="{StaticResource EducationalAbsencesTitle}" />
                <CollectionView ItemsSource="{Binding Absences}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Style="{StaticResource EducationalSmallCardFrame}">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Date, StringFormat='Date: {0:dd/MM/yyyy}'}" Style="{StaticResource EducationalAbsenceDate}" />
                                    <Label Style="{StaticResource AbsenceStatusText}" />
                                    <Label Text="{Binding Justification}" Style="{StaticResource EducationalAbsenceJustification}" IsVisible="{Binding Justification, Converter={StaticResource StringNotEmptyConverter}}" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>