<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchoolManagementMAUI.ViewModels"
             x:Class="SchoolManagementMAUI.Views.DashboardPage"
             Title="Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header com informações do utilizador -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Bem-vindo!" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

                <!-- Informações do utilizador -->
                <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                    <Label Text="{Binding UserName}" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="#007AFF"
                           HorizontalOptions="Center" />

                    <Label Text="{Binding UserEmail}" 
                           FontSize="14" 
                           TextColor="Gray"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Menu de opções -->
            <VerticalStackLayout Spacing="15">
                <Button Text="Minhas Notas"
                        Command="{Binding OpenGradesCommand}"
                        BackgroundColor="#007AFF"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50" />

                <Button Text="Meus Cursos"
                        Command="{Binding OpenCoursesCommand}"
                        BackgroundColor="#34C759"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50" />

                <Button Text="Meu Perfil"
                        Command="{Binding OpenProfileCommand}"
                        BackgroundColor="#FF9500"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50" />

                <Button Text="Sobre"
                        Command="{Binding OpenAboutCommand}"
                        BackgroundColor="#5856D6"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>