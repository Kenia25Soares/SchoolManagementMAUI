<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchoolManagementMAUI.ViewModels"
             xmlns:models="clr-namespace:SchoolManagementMAUI.Models"
             x:Class="SchoolManagementMAUI.Views.ClassGradesPage"
             Title="Class Subects">

    <ScrollView x:Name="classGradesPage">
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Class Header -->
            <Frame Style="{StaticResource EducationalHeaderFrame}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="My Class Subjects" 
                           Style="{StaticResource EducationalHeaderLabel}" />
                    <Label Text="{Binding ClassName}" 
                           Style="{StaticResource EducationalSubHeaderLabel}" />
                    <Label Text="{Binding CourseName}" 
                           Style="{StaticResource EducationalSubHeaderLabel}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Error Message -->
            <Label Text="{Binding Message}" 
                   Style="{StaticResource EducationalErrorMessage}"
                   IsVisible="{Binding Message, Converter={StaticResource StringNotEmptyConverter}}" />

            <!-- Loading indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <!-- Subjects Grid -->
            <CollectionView ItemsSource="{Binding ClassSubjects}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:StudentSubjectSummary">
                        <Frame Style="{StaticResource EducationalCardFrame}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ClassGradesViewModel}}, Path=OpenSubjectDetailCommand}" 
                                                      CommandParameter="{Binding}" />
                            </Frame.GestureRecognizers>

                            <!-- Horizontal Card Layout -->
                            <Grid ColumnDefinitions="*,Auto,Auto" Padding="15" ColumnSpacing="15">

                                <!-- Subject Info -->
                                <VerticalStackLayout Grid.Column="0" Spacing="6" VerticalOptions="Center">
                                    <Label Text="{Binding SubjectName}" 
                                           Style="{StaticResource EducationalSubjectName}" />
                                    <Label Text="{Binding WeightedAverage, StringFormat='Average: {0:F1}', FallbackValue='Average: N/A'}" 
                                           Style="{StaticResource EducationalAverageLabel}" />
                                    <Label Style="{StaticResource EducationalAbsencesLabel}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Absences: " />
                                                <Span Text="{Binding TotalAbsences}" />
                                                <Span Text="/" />
                                                <Span Text="{Binding AllowedAbsences}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </VerticalStackLayout>

                                <!-- Status Badge -->
                                <Frame Grid.Column="1" 
                                       Style="{StaticResource StatusBadgeFrame}">
                                    <Label Style="{StaticResource StatusBadgeLabel}" />
                                </Frame>

                                <!-- Arrow indicator -->
                                <Label Grid.Column="2" 
                                       Text="â€º" 
                                       Style="{StaticResource EducationalArrowLabel}" />

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>