<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchoolManagementMAUI.ViewModels"
             xmlns:models="clr-namespace:SchoolManagementMAUI.Models"
             x:Class="SchoolManagementMAUI.Views.EnhancedSubjectDetailPage"
             x:DataType="vm:EnhancedSubjectDetailViewModel"
             Title="Subject Detail">

    <ScrollView x:Name="enhancedSubjectPage">
        <VerticalStackLayout Padding="20" Spacing="20">


            <Frame Style="{StaticResource EducationalHeaderFrame}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding SubjectName}" 
                           Style="{StaticResource EducationalHeaderLabel}" />
                    <Label Text="{Binding SubjectDetail.TeacherName}" 
                           Style="{StaticResource EducationalSubHeaderLabel}"
                           IsVisible="{Binding SubjectDetail.TeacherName, Converter={StaticResource StringNotEmptyConverter}}" />
                </VerticalStackLayout>
            </Frame>


            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />


            <Label Text="{Binding Message}" 
                   Style="{StaticResource EducationalErrorMessage}"
                   IsVisible="{Binding Message, Converter={StaticResource StringNotEmptyConverter}}" />


            <Frame Style="{StaticResource EducationalSummaryFrame}" 
                   IsVisible="{Binding SubjectDetail, Converter={StaticResource IsNotNullConverter}}">
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10">

                    <Label Grid.Row="0" Grid.Column="0" Text="Overall Average:" FontAttributes="Bold" />
                    <Label Grid.Row="0" Grid.Column="1" 
                           Text="{Binding SubjectDetail.WeightedAverage, StringFormat='{0:F1}', FallbackValue='N/A'}" 
                           Style="{StaticResource EducationalSummaryValue}" />

                    <Label Grid.Row="1" Grid.Column="0" Text="Absences:" FontAttributes="Bold" />
                    <Label Grid.Row="1" Grid.Column="1" FontSize="14">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding SubjectDetail.TotalAbsences}" />
                                <Span Text=" / " />
                                <Span Text="{Binding SubjectDetail.AllowedAbsences}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label Grid.Row="2" Grid.Column="0" Text="Status:" FontAttributes="Bold" />
                    <Frame Grid.Row="2" Grid.Column="1" 
                           Style="{StaticResource FullStatusBadgeFrame}">
                        <Label Style="{StaticResource FullStatusBadgeLabel}" />
                    </Frame>

                </Grid>
            </Frame>


            <Label Text="Grades by Type" Style="{StaticResource EducationalSectionTitle}" />

            <CollectionView ItemsSource="{Binding GradesByType}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:GradeTypeGroup">
                        <Frame Style="{StaticResource EducationalCardFrame}">
                            <VerticalStackLayout Spacing="12">

                                <!-- Type Header -->
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0" 
                                           Text="{Binding TypeDisplayName}" 
                                           Style="{StaticResource EducationalTypeDisplayName}" />
                                    <Label Grid.Column="1" 
                                           Text="{Binding Average, StringFormat='Avg: {0:F1}'}" 
                                           Style="{StaticResource EducationalTypeAverage}" />
                                </Grid>

                                <!-- Individual Grades -->
                                <CollectionView ItemsSource="{Binding Grades}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:StudentGradeDetail">
                                            <Frame Style="{StaticResource EducationalSmallCardFrame}">
                                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                                                    <Label Grid.Column="0" 
                                                           Text="{Binding Value, StringFormat='{0:F1}'}" 
                                                           Style="{StaticResource EducationalGradeValue}" />
                                                                                                          <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                          <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}" 
                                                                 Style="{StaticResource EducationalDateLabel}" />
                                                          <Label Text="{Binding Observations}" 
                                                                 Style="{StaticResource EducationalObservationsLabel}"
                                                                 IsVisible="{Binding Observations, Converter={StaticResource StringNotEmptyConverter}}" />
                                                      </VerticalStackLayout>
                                                                                                          <Label Grid.Column="2" 
                                                             Text="{Binding Weight, StringFormat='Weight: {0:F1}'}" 
                                                             Style="{StaticResource EducationalWeightLabel}" />
                                                </Grid>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


            <Label Text="Absences History" Style="{StaticResource EducationalSectionTitle}" />

            <CollectionView ItemsSource="{Binding Absences}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:StudentAbsenceDetail">
                        <Frame Style="{StaticResource EducationalCardFrame}">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                <!-- Date -->
                                <VerticalStackLayout Grid.Column="0" Spacing="2" VerticalOptions="Center">
                                    <Label Text="{Binding Date, StringFormat='{0:dd}'}" 
                                           Style="{StaticResource EducationalDayNumber}" />
                                    <Label Text="{Binding Date, StringFormat='{0:MMM}'}" 
                                           Style="{StaticResource EducationalMonthLabel}" />
                                </VerticalStackLayout>

                                <!-- Justification or default text -->
                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="Absence" 
                                           Style="{StaticResource EducationalAbsenceType}" />
                                    <Label Style="{StaticResource AbsenceJustificationText}" />
                                </VerticalStackLayout>

                                <!-- Status Badge -->
                                <Frame Grid.Column="2" 
                                       Style="{StaticResource AbsenceStatusBadgeFrame}">
                                    <Label Style="{StaticResource AbsenceStatusBadgeLabel}" />
                                </Frame>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>