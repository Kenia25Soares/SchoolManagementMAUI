<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:vm="clr-namespace:SchoolManagementMAUI.ViewModels"
             xmlns:models="clr-namespace:SchoolManagementMAUI.Models"
             x:Class="SchoolManagementMAUI.Views.GradesPage"
             x:DataType="vm:GradesViewModel"
             Title="My Grades">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="{Binding StudentName}" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />

            <Label Text="{Binding Message}"
                   Style="{StaticResource EducationalErrorMessage}"
                   IsVisible="{Binding Message, Converter={StaticResource StringNotEmptyConverter}}" />

            <!-- Loading indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <CollectionView ItemsSource="{Binding SubjectSummaries}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:StudentSubjectSummary">
                        <Frame Style="{StaticResource EducationalCardFrame}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GradesViewModel}}, Path=OpenSubjectDetailCommand}" 
                                                      CommandParameter="{Binding}" />
                            </Frame.GestureRecognizers>
                            
                            <!-- Card Layout with Status Badge -->
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="15" RowSpacing="8">
                                
                                <!-- Subject Name -->
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding SubjectName}" 
                                       Style="{StaticResource EducationalSubjectName}" />
                                
                                <!-- Status Badge -->
                                <Frame Grid.Row="0" Grid.Column="1" 
                                       Style="{StaticResource StatusBadgeFrame}">
                                    <Label Style="{StaticResource StatusBadgeLabel}" />
                                </Frame>
                                
                              
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding TeacherName}" 
                                       Style="{StaticResource EducationalTeacherName}" />
                                
                                <!-- Average -->
                                <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding WeightedAverage, StringFormat='Average: {0:F2}', FallbackValue='Average: N/A'}" 
                                       Style="{StaticResource EducationalAverageLabel}" />
                                
                                <!-- Absences -->
                                <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                       Style="{StaticResource EducationalAbsencesLabel}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Absences: " />
                                            <Span Text="{Binding TotalAbsences}" />
                                            <Span Text="/" />
                                            <Span Text="{Binding AllowedAbsences}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>