<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:vm="clr-namespace:SchoolManagementMAUI.ViewModels"
             xmlns:models="clr-namespace:SchoolManagementMAUI.Models"
             x:Class="SchoolManagementMAUI.Views.GradesPage"
             x:DataType="vm:GradesViewModel"
             Title="My Grades">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="{Binding StudentName}" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />

            <Label Text="{Binding Message}"
                   Style="{StaticResource EducationalErrorMessage}"
                   IsVisible="{Binding Message, Converter={StaticResource StringNotEmptyConverter}}" />

            <!-- Loading indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <CollectionView ItemsSource="{Binding SubjectSummaries}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:StudentSubjectSummary">
                        <Frame Style="{StaticResource EducationalCardFrame}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GradesViewModel}}, Path=OpenSubjectDetailCommand}" 
                                                      CommandParameter="{Binding}" />
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout>
                                <Label Text="{Binding SubjectName}" Style="{StaticResource EducationalSubjectName}" />
                                <Label Text="{Binding TeacherName}" Style="{StaticResource EducationalTeacherName}" />
                                <Label Text="{Binding WeightedAverage, StringFormat='Average: {0:F2}', FallbackValue='Average: N/A'}" Style="{StaticResource EducationalAverageLabel}" />
                                <Label Style="{StaticResource EducationalAbsencesLabel}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Absences: " />
                                            <Span Text="{Binding TotalAbsences}" />
                                            <Span Text="/" />
                                            <Span Text="{Binding AllowedAbsences}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Text="{Binding StatusDescription}" Style="{StaticResource StatusTextColor}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>