<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SchoolManagementMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SchoolManagementMAUI.Views"
     xmlns:vm="clr-namespace:SchoolManagementMAUI.Views"
    Title="SchoolManagementMAUI"
    FlyoutBackgroundColor="#1E3A8A"
    FlyoutHeaderBehavior="Fixed">

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#1E3A8A" 
              Padding="20,50,20,20">
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="🏫" 
                       FontSize="40" 
                       HorizontalOptions="Center" />
                <Label Text="School Management" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="White" 
                       HorizontalOptions="Center" />
                <Label Text="Academic Portal" 
                       FontSize="14" 
                       TextColor="#E0E7FF" 
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Definição de rotas -->
    <ShellContent ContentTemplate="{DataTemplate views:PublicHomePage}"
                  Route="home"
                  Shell.FlyoutItemIsVisible="False" />

    <ShellContent ContentTemplate="{DataTemplate views:LoginPage}"
                  Route="login"
                  Shell.FlyoutItemIsVisible="False" />

    <ShellContent ContentTemplate="{DataTemplate views:ClassesListPage}"
                  Route="public-classes"
                  Shell.FlyoutItemIsVisible="False" />

    <!-- Main Dashboard -->
    <FlyoutItem Title="Dashboard" Icon="hero_school.svg">
        <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}"
                      Route="dashboard" />
    </FlyoutItem>

    <!-- Academic Section -->
    <FlyoutItem Title="Academic" Icon="grade_icon.svg">
        <ShellContent ContentTemplate="{DataTemplate views:GradesPage}"
                      Route="grades" />
    </FlyoutItem>

    <!-- Catalog Section -->
    <FlyoutItem Title="Catalog" Icon="class_add_icon.svg">
        <ShellContent ContentTemplate="{DataTemplate views:CoursesListPage}"
                      Route="public-courses" />
    </FlyoutItem>

    <!-- Profile Section -->
    <FlyoutItem Title="Profile" Icon="icon_user.svg">
        <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}"
                      Route="profile" />
    </FlyoutItem>

    <!-- Notifications -->
    <FlyoutItem Title="Notifications" Icon="icon_bell.svg">
        <ShellContent ContentTemplate="{DataTemplate views:AlertsPage}"
                      Route="alerts" />
    </FlyoutItem>

    <!-- Settings -->
    <FlyoutItem Title="Settings" Icon="icon_user_pen.svg">
        <ShellContent ContentTemplate="{DataTemplate views:UpdatePasswordPage}"
                      Route="update-password" />
    </FlyoutItem>

    <!-- About -->
    <FlyoutItem Title="About" Icon="notification_icon.svg">
        <ShellContent ContentTemplate="{DataTemplate views:AboutPage}"
                      Route="about" />
    </FlyoutItem>

    <!-- Logout -->
    <FlyoutItem Title="Logout" Icon="warning_icon.svg">
        <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}"
                      Route="logout" />
    </FlyoutItem>

</Shell>
