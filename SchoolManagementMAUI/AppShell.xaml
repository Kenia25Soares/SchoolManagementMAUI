<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SchoolManagementMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SchoolManagementMAUI.Views"
     xmlns:vm="clr-namespace:SchoolManagementMAUI.Views"
    Title="SchoolManagementMAUI">

    <!-- Definição de rotas -->
    <ShellContent ContentTemplate="{DataTemplate views:LoginPage}"
                  Route="login"
                  Shell.FlyoutItemIsVisible="False" />

    <ShellContent Title="Dashboard"
                  ContentTemplate="{DataTemplate views:DashboardPage}"
                  Route="dashboard" />

    <ShellContent Title="Grades"
                  ContentTemplate="{DataTemplate views:GradesPage}"
                  Route="grades" />

    <ShellContent Title="Update Password"
                  ContentTemplate="{DataTemplate views:UpdatePasswordPage}"
                  Route="update-password" />

    <ShellContent Title="My Subjects"
                  ContentTemplate="{DataTemplate views:SubjectListPage}"
                  Route="subject-list" />

    <ShellContent Title="Subject Details"
                  ContentTemplate="{DataTemplate views:SubjectGradePage}"
                  Route="subject-grade" />

    <ShellContent Title="Logout"
                  Route="logout"
                  ContentTemplate="{DataTemplate views:DashboardPage}" />

    <!--<ShellContent Title="Cursos"
                  ContentTemplate="{DataTemplate views:CoursesPage}"
                  Route="courses" />

    <ShellContent Title="Perfil"
                  ContentTemplate="{DataTemplate views:ProfilePage}"
                  Route="profile" />-->

    <ShellContent Title="About"
                  ContentTemplate="{DataTemplate views:AboutPage}"
                  Route="about" />

</Shell>
